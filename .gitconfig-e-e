[user]
	email = goncalo.sousa@tecnico.ulisboa.pt
	name = Gonçalo Sousa

[core]
    editor = vim
    autocrlf = input

[alias]
	alias = config --get-regexp ^alias\\.
	eh = config --get-regexp ^alias\\.
    amend = commit --amend
    bah = blame
    branches = branch -a
    ch = checkout
    copycat = commit -C
    dff = diff --color=auto
    diffc = diff --cached --diff-algorithm=minimal -w
    discard = checkout --
    find = !git ls-tree -r --name-only HEAD | grep --color $1
    found = stash pop
    fuckedup = reset --hard
    graph = log --graph -10 --branches --remotes --tags  --format=format:'%Cgreen%h %Creset• %<(75,trunc)%s (%cN, %cr) %Cred%d' --date-order
    huh = diff --cached
    in = add
    lg = log --color=always -p
    lost = stash
    lsd = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    meow = status
    nb = checkout -b
    out = rm
    overit = stash clear
    pullup = pull upstream
    pullorg = pull origin
    pushup = push upstream
    pushorg = push origin
    real = rebase
    remotes = remote -v
    rt = reset
    st = status
    stashes = stash list
    tags = tag
    that = checkout -
    this = checkout
    uncommit = reset --mixed HEAD~
    unstage = reset -q HEAD --
    wasted = reset HEAD
    what = diff
    with = merge
    wtf = status
    yolo = !git add -A && git commit -m \"$(curl -s whatthecommit.com/index.txt)\"

[apply]
    whitespace = nowarn
[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
    ui = auto

[diff]
    algorithm = patience
[push]
    default = matching
[help]
    autocorrect = 1
[difftool "sourcetree"]
	cmd = meld $LOCAL $BASE
	path = 
[mergetool "sourcetree"]
	cmd = meld $LOCAL $MERGED $REMOTE
	trustExitCode = true
